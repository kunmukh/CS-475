// File: table.cpp
// Example of table formatting

#include <iostream>  // cout, endl
#include <cmath>     // pow()
using namespace std;

int main ()
{
   cout << "n" << "    " << "2^n" << endl;
   cout << "----" << "    " << "------" << endl;
   for (int i = 0; i < 16; i=i+4)
      cout << i << "    " << pow(2,i) << endl;

   return 0;
}
